{
  "name": "clean-arch-backend",
  "version": "1.0.0",
  "engines": {
    "node": ">=20 <21"
  },
  "main": "dist/main/server.js",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/main/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/main/server.js",
    "test": "jest",
    "test:integration": "cross-env RUN_INTEGRATION_TESTS=1 jest",
    "test:integration:local-db": "cross-env RUN_INTEGRATION_TESTS=1 INTEGRATION_DATABASE_URL=postgresql://postgres:123@localhost:5432/postgres jest",
    "test:coverage": "npx jest --coverage",
    "coverage": "powershell -NoProfile -Command \"Start-Process .\\coverage\\lcov-report\\index.html\"",
    "lint": "eslint . --ext .ts --cache --cache-location .cache/eslint --max-warnings=0",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/eslint",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "format:prisma": "npx prisma format",
    "openapi:validate": "node scripts/validate-openapi.cjs",
    "docs": "docsify serve docs",
    "db:seed": "prisma db seed",
    "check": "npm run lint && npm run format:check && npm run openapi:validate && npm test",
    "ts": "node -r ts-node/register -r tsconfig-paths/register",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.2.0",
    "@sentry/node": "^10.31.0",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "undici": "^7.16.0",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.3",
    "@types/nodemailer": "^7.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^10.1.0",
    "docsify-cli": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
