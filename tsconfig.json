{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src"]
}
