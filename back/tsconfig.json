{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
   
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "paths": {
      "@infra/*": ["infrastructure/*"],
      "@interfaces/*": ["interfaces/*"],
      "@usecases/*": ["usecases/*"],
      "@domain/*": ["domain/*"],
      "@utils/*": ["utils/*"],
      "@main/*": ["main/*"]
    }
  },
  "include": ["src"]
}
